<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:scrollbars="vertical"
	android:fadeScrollbars="false">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
		android:layout_width="fill_parent"
	  	android:layout_height="fill_parent">
	  	
		<ImageView
			android:layout_centerHorizontal="true"
			android:src="@drawable/logo"
			android:id="@+id/imglogo" 
			android:adjustViewBounds="true"
			android:onClick="web"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			></ImageView>	  	

		<TextView 
			android:layout_below="@+id/imglogo"
			style="@style/titulo"
			android:text="@string/tit_ajuda2" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit2"
			android:layout_centerHorizontal="true"
	    	/>
	    	
		<ImageView
			android:layout_below="@+id/tit2"
			android:layout_alignParentLeft="true"
			android:id="@+id/img1"
			android:src="@drawable/cadeado_fechado" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			></ImageView>
		<TextView 
			android:layout_toRightOf="@+id/img1"
			android:layout_below="@+id/tit2"
		 	style="@style/titulo"
			android:text="@string/tit_abrir" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit3"
			/>
			
		<ImageView
			android:layout_below="@+id/img1"
			android:layout_alignParentLeft="true"
			android:id="@+id/img2"
			android:src="@drawable/cadeado_aberto" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			></ImageView>
		<TextView 
			android:layout_toRightOf="@+id/img2"
			android:layout_below="@+id/img1"
		 	style="@style/titulo"
			android:text="@string/tit_fechar" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit4"
			/>	
			
		<ImageView
			android:layout_below="@+id/img2"
			android:layout_alignParentLeft="true"
			android:id="@+id/img3"
			android:src="@drawable/ok" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			></ImageView>
		<TextView 
			android:layout_toRightOf="@+id/img3"
			android:layout_below="@+id/img2"
		 	style="@style/titulo"
			android:text="@string/tit_ok" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit5"
			/>	
					
		<ImageView
			android:layout_below="@+id/img3"
			android:layout_alignParentLeft="true"
			android:id="@+id/img4"
			android:src="@drawable/cancelar" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			></ImageView>
		<TextView 
			android:layout_toRightOf="@+id/img4"
			android:layout_below="@+id/img3"
		 	style="@style/titulo"
			android:text="@string/tit_cancelar" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit6"
			/>	

		<ImageView
			android:layout_below="@+id/img4"
			android:layout_alignParentLeft="true"
			android:id="@+id/img5"
			android:src="@drawable/inserir_registro" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			></ImageView>
		<TextView 
			android:layout_toRightOf="@+id/img5"
			android:layout_below="@+id/img4"
		 	style="@style/titulo"
			android:text="@string/tit_novo" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit7"
			/>	
			
		<TextView 
			android:layout_below="@+id/img5"
		 	style="@style/titulo"
			android:text="@string/tit_ajuda3" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit8"
			/>				

		<TextView 
			android:layout_below="@+id/tit8"
		 	style="@style/titulo"
			android:text="@string/tit_ajuda4" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit9"
			/>				



		<TextView 
			android:layout_below="@+id/tit9"
		 	style="@style/titulo"
			android:text="@string/tit_ajuda5" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit10"
			/>

		<TextView 
			android:layout_below="@+id/tit10"
		 	style="@style/titulo"
			android:text="@string/tit_ajuda6" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"  
			android:id="@+id/tit11"
			/>
			
		<ImageView
			android:layout_below="@+id/tit11"
			android:layout_centerHorizontal="true"
			android:id="@+id/img6"
			android:src="@drawable/polegar_positivo" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:onClick="fechar"
			></ImageView>
			
	</RelativeLayout>>
</ScrollView>
